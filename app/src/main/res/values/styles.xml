<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for full screen activity (all of them for this app) -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="game_title_text">
        <item name="android:fontFamily">@font/font_military_progress</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@android:color/white </item>
    </style>
    <style name="game_header_text">
        <item name="android:fontFamily">@font/font_uss_dallas</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="game_small_header_text">
        <item name="android:fontFamily">@font/font_motion_control_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="game_screen_title_text">
        <item name="android:fontFamily">@font/font_laconic_bold</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="game_button_text">
        <item name="android:fontFamily">@font/font_laconic_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="game_regular_text">
        <item name="android:fontFamily">@font/font_laconic_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
