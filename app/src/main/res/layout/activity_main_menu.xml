<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    tools:context=".UI.MainMenuActivity"
    android:background="@drawable/water1">
    <ImageView
        android:id="@+id/image_title"
        android:layout_width="600dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/submarine_wars_title2"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/bomb2"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_title"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_play"
                android:onClick="playGame"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/main_menu_play_button"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="64dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/menu_button"
                style="@style/game_button_text"/>
            <Button
                android:id="@+id/button_options"
                android:onClick="openOptions"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:text="@string/main_menu_options_button"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="64dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/menu_button"
                style="@style/game_button_text"/>
            <Button
                android:id="@+id/button_help"
                android:onClick="openHelp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:text="@string/main_menu_help_button"
                android:textStyle="bold"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="64dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/menu_button"
                style="@style/game_button_text"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>